<h2><%= @survey.name %></h2>
  <form>
    <% @questions.each do |question| %>
    <h3><%= question.body %></h3>
    <% question.choices.each do |choice| %>
      <input type="radio" name=<%= "#{question.body}" %> value=<%= "#{choice.body}" %>>"<%= choice.body %>"<br>
      <% end %>  
    <% end %>
    <input type="submit" value="submit">
  </form>
