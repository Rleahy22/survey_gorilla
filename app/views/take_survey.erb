<h2><%= @survey.name %></h2>
<% @questions.each do |question| %>
  <h3><%= question.body %></h3>
  <form>
    <% questions.choices.each do |choice| %>
      <input type="radio" name=<%= "#{question.body}" %> value=<%= "#{choice.body}" %>>"<%= choice.body %>"<br>
      <% end %>
      <input type="submit" value="submit">
  </form>
<% end %>
