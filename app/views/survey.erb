<h2><%= @survey.name %></h2>
<% @questions.each do |question| %>
  <h3><%= question.body %></h3>
  <table border="1">
    <tr>
      <td>Option</td>
      <td>Count</td>
    </tr>
    <% question.choices.each do |choice| %>
    <tr>
      <td><%= choice.body %></td>
      <td><%= choice.count %></td>
    </tr>
    <% end %>  
  </table>
<% end %>
